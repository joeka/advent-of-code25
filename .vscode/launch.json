{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run day",
            "type": "debugpy",
            "request": "launch",
            "module": "aoc25",
            "args": [
                "--day",
                "${input:day}",
                "--part",
                "${input:part}",
                "inputs/day${input:day}.txt"
            ]
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "day",
            "description": "Select day to run",
            "options": [
                "01",
                "02",
                "03",
            ],
            "default": "01"
        },
        {
            "type": "pickString",
            "id": "part",
            "description": "Select part to run",
            "options": [
                "1",
                "2"
            ],
            "default": "1"
        }
    ]
}